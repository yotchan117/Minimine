<header class="sticky-top shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand p-3" href="/"><span>Minimine</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>

            <li class="nav-item mx-2">
              <%= link_to notifications_path, class: "nav-link text-light" do %>
                <% if unchecked_notifications.any? %>
                  <i class="fas fa-bell"></i>
                  <i class="fas fa-circle"></i>
                <% else %>
                  <i class="fas fa-bell"></i>
                <% end %>
              <% end %>
            </li>

            <li class="nav-item mx-2">
              <%= link_to search_path, class: "nav-link text-light" do %>
                <i class="fas fa-search"></i>
              <% end %>
            </li>

            <li class="nav-item mx-2">
              <%= link_to "Posts", posts_path, class: "nav-link text-light" %>
            </li>

            <li class="nav-item mx-2">
              <%= link_to "Users", users_path, class: "nav-link text-light" %>
            </li>

            <li class="nav-item mx-2">
              <%= link_to "New post", new_post_path, class: "nav-link text-light" %>
            </li>

            <li class="nav-item mx-2">
              <%= link_to "My page", user_path(current_user), class: "nav-link text-light" %>
            </li>

            <li class="nav-item mx-2">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-light" %>
            </li>
          <% else %>
            <li class="nav-item mx-2">
              <%= link_to "Log in", new_user_session_path, class: "nav-link text-light" %>
            </li>

            <li class="nav-item mx-2">
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link text-light" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>

