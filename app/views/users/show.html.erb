<div class="container py-3">
  <div class="row">
    <div class="col-md-6 mx-auto d-flex">
      <%= image_tag @user.get_profile_image, class: "rounded-circle" %>
      <div class="ml-auto">
        <% if (current_user.admin?) || (current_user == @user) %>
          <%= link_to edit_user_path(@user), class: "btn btn-light" do %>
            <i class="fas fa-cog"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto py-3">
      <h4><%= @user.name %></h4>
      <p><%= @user.introduction %></p>
      <div class="mb-2">
        <%= link_to "Favorites", favorites_user_path(@user), class: "btn btn-dark" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 mx-auto">
      <%= render "posts/index", posts: @posts %>
    </div>
  </div>
</div>