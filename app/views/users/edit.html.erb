<div class="container py-3">
  <div class="row">
    <div class="col-md-5 mx-auto">
      <h3>Edit</h3>
      <%= form_with model: @user do |f| %>
        <%= render "layouts/errors", obj: @user %>
        <div class="form-group">
          <%= f.label :profile_image, "Image" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-light my-2 mr-4" %>
          <%= link_to "Quit", quit_user_path(@user), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>