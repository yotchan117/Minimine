<div class="container py-3">
  <div class="row">
    <div class="col-md-10 col-lg-8 col-xl-6 mx-auto d-flex">
      <h3>Edit</h3>
      <div class="ml-auto">
        <%= link_to "Quit", quit_user_path(@user), class: "btn btn-danger" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-lg-8 col-xl-6 mx-auto">
      <%= form_with model: @user do |f| %>
        <%= render "layouts/errors", obj: @user %>
        <div class="form-group">
          <%= f.label :profile_image, "Image" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/jpeg, image/png" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <p><u><%= link_to "Change your password?", edit_user_registration_path, class: "text-light" %></u></p>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-light my-2 mr-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>