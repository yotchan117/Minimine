<div class="mx-3">
  <% if posts.empty? %>
    <p>投稿はありません。</p>
  <% else %>
    <% posts.each_slice(3) do |posts| %>
      <div class="row row-cols-3">
        <% posts.each do |post| %>
          <div class="col p-0">
            <%= link_to post_path(post) do %>
              <%= image_tag post.get_image, class: "box" %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
<div class="mt-4"><%= paginate posts %></div>