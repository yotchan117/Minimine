<div class="container py-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card shadow-lg bg-dark">
        <div class="card-header d-flex">
          <%= link_to user_path(@post.user), class: "text-light" do %>
            <%= image_tag @post.user.get_profile_image, size: "50x50", class: "rounded-circle" %>
            <%= @post.user.name %>
          <% end %>
          <div class="d-flex ml-auto align-items-center">
            <% if (current_user.admin?) || (current_user == @post.user) %>
              <div class="mx-2">
                <%= link_to "Edit", edit_post_path(@post), class: "btn btn-sm btn-secondary" %>
              </div>
              <div>
                <%= link_to "Delete", post_path(@post), method: :delete, "data-confirm" => "この投稿を削除しますか？", class: "btn btn-sm btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
        <%= image_tag @post.image, class: "card-img" %>
        <div class="card-footer">
          <div class="post-comments-counter"><%= render "post_comments/counter", post: @post %></div>
          <p><%= safe_join(@post.description.split("\n"), tag(:br)) %></p>
          <div class="post-comments-index">
            <%= render "post_comments/index", post: @post %>
          </div>
          <%= render "post_comments/form", post: @post, post_comment: @post_comment %>
        </div>
      </div>
    </div>
  </div>
</div>